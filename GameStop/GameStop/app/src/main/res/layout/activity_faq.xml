<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2A2A">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/faq_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/toolbarBackground"
        app:title="FAQs"
        app:titleTextColor="@android:color/white"
        app:titleMarginStart="72dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="Back"
        android:focusable="true"
        android:src="@drawable/lessthn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/faq_toolbar"
        app:tint="#FFFFFF"
        tools:ignore="TouchTargetSizeCheck" />

    <ScrollView
        android:id="@+id/faq_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/faq_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:backgroundTint="#333333"
            android:gravity="start"
            android:orientation="vertical"
            android:spacing="16dp">

            <LinearLayout
                android:id="@+id/faq_section_refund1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_refund1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_refund1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Requesting a refund"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_refund1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_refund1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Yes, you can request a refund within 14 days of purchase if you played less than 2 hours."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_launch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_launch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_launch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Why won't my game launch?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_launch"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_launch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Make sure your system meets the game's requirements. Try updating your drivers or verifying game files."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_multiple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_multiple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_multiple"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Can I use my account on multiple devices?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_multiple"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_multiple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Yes, you can log into your account on any supported device and your progress will sync automatically."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_preload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_preload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_preload"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Can I preload games before release?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_preload"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_preload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Yes, many games support preloading so you can start playing immediately at launch time."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_account1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_account1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_account1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Account Recovery / Forget Password"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_account1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_account1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Use the 'Forgot Password' link on the login screen and follow the email verification process to reset your password."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_update1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_update1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="How do I update my games manually?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_update1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_update1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Go to Library, select your game, and tap the options menu to manually check for updates."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_dlc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_dlc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_dlc1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Where can I find the DLCs I’ve purchased?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_dlc1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_dlc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Purchased DLCs are available from the game’s store page or under your Library inside the game details section."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_controller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_controller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:text="Which controllers are supported?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_controller"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_controller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Most games support Xbox, PlayStation, and Bluetooth controllers. Check the store page for specific compatibility."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_subscription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_subscription1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_subscription1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="How does billing work for subscriptions?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_subscription1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_subscription1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Subscriptions are billed monthly or yearly. You can manage billing and cancel anytime from your account settings."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_error"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="What should I do if I see an error code?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_error"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Refer to the support page using the code shown, or contact support with a screenshot of the error for assistance."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_login"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Having trouble logging in?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_login"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="If you're unable to log in, try resetting your password or check for internet connection and app version updates."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_payment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_payment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_payment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Payment failed?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_payment1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_payment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="If your payment fails, check your card details or try a different payment method. Contact support if the issue continues."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_install"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_install"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_install"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Can't install the Game?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_install"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_install"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Check available storage, network stability, and retry. If it persists, clear the app cache and relaunch the store."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq_section_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/help_section_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_friend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Friend can't be added?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/arrow_friend"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/downarrow"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Ensure the username is correct and friend requests are enabled. Both accounts must not have privacy restrictions."
                    android:textColor="#CFCFCF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
